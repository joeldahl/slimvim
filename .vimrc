set nocompatible

syntax off

set showmode
set showcmd
set laststatus=2
set incsearch
set nohlsearch
set noerrorbells
set vb t_vb=
set nobackup
set history=1000
set backspace=indent,eol,start
set number
set ruler
set textwidth=78
set nolist
set listchars=tab:>>,trail:-
set statusline=%F\ %m%r%h%w\ [%{&ff}]\ %y\ %l/%L:%v

nnoremap <Up> <NOP>
nnoremap <Down> <NOP>
nnoremap <Left> <NOP>
nnoremap <Right> <NOP>
nnoremap <PageUp> <NOP>
nnoremap <PageDown> <NOP>
nnoremap <Home> <NOP>
nnoremap <End> <NOP>
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
inoremap <PageUp> <NOP>
inoremap <PageDown> <NOP>
inoremap <Home> <NOP>
inoremap <End> <NOP>
