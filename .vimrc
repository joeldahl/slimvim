set nocompatible

syntax off

set showmode
set showcmd
set laststatus=2
set incsearch
set nohlsearch
set noerrorbells
set vb t_vb=
set nobackup
set history=1000
set backspace=indent,eol,start
set number
set ruler
set textwidth=78
set nolist
set listchars=tab:>>,trail:-
set statusline=%F\ %m%r%h%w\ [%{&ff}]\ %y\ %l/%L:%v

noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
noremap <PageUp> <NOP>
noremap <PageDown> <NOP>
noremap <Home> <NOP>
noremap <End> <NOP>
